<div class="main-area">
  <div class="contents-box-devise">
      <div class="devise-title">パスワード再設定</div>
      <p class="title-supplement">パスワード再設定用のメールを送信します</p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, "メールアドレス",class:"item-title"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class: "devise-item-field"%>
        </div>

        <div class="actions">
          <%= f.submit "メール送信", class: "devise-medium-btn"%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
